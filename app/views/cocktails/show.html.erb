<h1><%= @cocktail.name %></h1>

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, width: 400, crop: :fill %>')">
  <%=link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
</div>

<ul class="list-form">
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
      <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash destroy_dose"></i>
      <% end %>
  <% end %>
</ul>

<%= link_to "Edit cocktail", new_cocktail_dose_path(@cocktail) %>

<%= link_to "All cocktails", cocktails_path %>
